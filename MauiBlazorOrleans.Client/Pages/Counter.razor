@page "/counter"
@using Orleans.Configuration
@using MauiBlazorOrleans.Shared.Grains.Contracts

@inject IClusterClient _clusterClient;
<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<div>
    <button class="btn btn-primary" @onclick="GetGrainAsync">Orleans</button>
</div>

@code {

    async Task GetGrainAsync()
    {
        var x = _clusterClient.GetGrain<IFulaFileGrain>("friend");
        var res = await x.GetFileInfoAsync("GoodMorning.jpg");
    }
    
}
